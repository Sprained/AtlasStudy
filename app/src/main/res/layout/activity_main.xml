        tools:layout_editor_absoluteY="513dp" />

    <Button
        android:id="@+id/btnRate"
        android:layout_width="82dp"
        android:layout_height="59dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
